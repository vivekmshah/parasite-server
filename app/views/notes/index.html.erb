<br>
<% @notes.each do |note|%>
	<span><%= link_to "#{note.description}", note_path(note) %></span><br>

	<%=link_to "#{note.username}", user_path(note.user_id)%> | <%= note.created_at.strftime("%m/%d/%Y")%> | 
	<%=link_to note.comments.count, note_path(note) %><br><br>

<% end %>

<% if current_user %>

  <%= form_tag notes_path do %>
    <%= text_field_tag :description %>
    <%= hidden_field_tag :domain %>
    <%= hidden_field_tag :user_id, current_user.id %>
    <%= submit_tag "submit" %>
  <% end %>

<% end %>
<script type="text/javascript">
var domainField = document.getElementById('domain');
domainField.value = document.domain;
</script>